.title{
    width: 100%;
    height: 140rpx;
    background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
    text-align: center;
    font-size: 40rpx;
    position: relative;
    color: rgb(97, 97, 97);
    line-height: 220rpx;
}
.back{
    position: absolute;
    top: 0rpx;
    left: 30rpx;
}
.notice_one{
    width: 80%;
    height: auto;
    border-radius: 20rpx;
    border: 3rpx solid rgba(0, 0, 0, 0);
    margin: 50rpx auto;
    box-shadow: 2rpx 2rpx 20rpx #666;
    text-align: center;
}
.notice_title{
    height: 50rpx;
    text-align: center;
    font-size: 38rpx;
    color: rgb(37, 139, 255);
    margin-top: 20rpx;
}
.notice_classify{
    height: 50rpx;
    display: inline-block;
    text-align: center;
    font-size: 25rpx;
    color: white;
    background-color: pink;
    padding: 0 20rpx;
    margin: 20rpx;
    line-height: 50rpx;
    border-radius: 20rpx;
}
.notice_picture{
    width:90%;
    margin: 0 auto;
    background-size: 100% 100%;
}
.notice_content{
    text-align: left;
    width: 90%;
    margin: 0 auto;
    text-indent: 2em;
    margin-top: 20rpx;
}
.notice_time{
    height: 50rpx;
    display: inline-block;
    text-align: center;
    font-size: 25rpx;
    color: white;
    background-color: rgb(63, 63, 63);
    padding: 0 20rpx;
    margin: 20rpx;
    line-height: 50rpx;
    border-radius: 20rpx;
}