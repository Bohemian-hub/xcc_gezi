<swiper class="card-swiper {{DotStyle?'square-dot':'square-dot'}}" indicator-dots="true" circular="true" autoplay="true"
    interval="8000" duration="500" indicator-color="#8799a3" indicator-active-color="#0081ff">

    <!-- 这就是儿子了吧 -->
    <swiper-item wx:for="{{swiperList}}" wx:key="item">
        <view class="confress_panel">
            <view class="confress_panel_top">
                <view class="confress_panel_title">
                    {{item.card_from}}的表白卡
                </view>
                <view class="confress_panel_numbers">
                    {{item.id}}/{{swiperList.length}}
                </view>
                <view style="clear: both;">
                </view>
                <view class="confess_to_who_text" selectable="false" space="false" decode="false">
                    To {{item.card_object}} :
                </view>
            </view>

            <view style="width:100%;">
                <view class="confess_image">
                    <image class="confess_image_icon"
                        src="https://img-blog.csdnimg.cn/20190819220643788.png?x-oss-process=image/watermark,type_ZmFuZ3poZW5naGVpdGk,shadow_10,text_aHR0cHM6Ly9ibG9nLmNzZG4ubmV0L3FxXzM5MTI5ODQ1,size_16,color_FFFFFF,t_70"
                        mode="heightFix" lazy-load="false" binderror="" bindload="" />
                </view>
                <view class="confess_text">
                    {{item.card_content}}
                </view>
            </view>

            <view class="confess_makelove">


                <view class="confess_right_love_numbers"
                    style="color: {{item.id==onclick_love_id[index]?'red':'white'}};">
                    {{item.love_numbers}}
                </view>
                <image class="confess_right_love"
                    src="{{item.id==onclick_love_id[index]?'https://s3.ax1x.com/2020/11/15/DFhSuF.png':'https://s3.ax1x.com/2020/11/15/DFhpB4.png'}}"
                    data-id='{{item.id}}' bindtap="makelove">
                </image>


                <view class="confess_right_comment_numbers">
                    {{item.comment_numbers}}
                </view>
                <image class="confess_right_comment" src="../../image_icon/comment.png" data-id='{{item.id}}'
                    bindtap="makecomment">
                </image>


            </view>
        </view>
    </swiper-item>


</swiper>

