.title{
    width: 100%;
    height: 140rpx;
    background-color: rgb(41, 191, 250);
    text-align: center;
    font-size: 40rpx;
    position: relative;
    color: white;
    line-height: 220rpx;
}
.back{
    position: absolute;
    top: 0rpx;
    left: 30rpx;
}
.intro{
    height: 300rpx;
    width: 100%;
    background-color: rgb(41, 191, 250);
    text-align: center;
    line-height: 60rpx;
    color: white;
}
.search_place{
    width: 70%;
    height: 120rpx;
    margin-top: 100rpx;
    background-color: rgb(255, 255, 255);
    margin-left: 15%;
    border: 1rpx solid rgb(187, 187, 187);
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 2rpx 2rpx 10rpx rgb(138, 138, 138);
}
.search_input{
    width: 75%;
    height: 120rpx;
    background-color: rgb(169, 228, 255);
    float: left;
}
.search_button{
    width: 25%;
    height: 120rpx;
    float: left;
    background-color: rgb(255, 255, 255);
    background-image: url(https://xcc-grid-1256135907.cos.ap-nanjing.myqcloud.com/tuchuang/souxuo.png);
    background-size: 60% 60%;
    background-repeat: no-repeat;
    background-position: 20rpx;
    
}
.search_input_place{
    height: 120rpx;
    font-size: 40rpx;
    padding-left: 20rpx;
}
.address_one{
    width: 85%;
    height: 165rpx;
    background-color: antiquewhite;
    margin-left: 7.5%;
    margin-top: 20rpx;
    border-radius: 20rpx;
    background-color: rgb(41, 191, 250);
}
.infor_name{
    width: 28%;
    height: 60rpx;
    color: white;
    font-size: 50rpx;
    float: left;
    padding: 5rpx;
    margin-left: 2%;
}
.infor_des{
    width: 70%;
    height: 60rpx;
    color:  rgb(255, 255, 255);
    font-size: 35rpx;
    line-height: 60rpx;
    float: left;
    text-align: center;
}
.person_infor{
    border-bottom: 5rpx solid white;
    width: 100%;
    height: 70rpx;
}
.address{
    float: left;
    height: 40rpx;
    width: 45%;
    margin-top: 5rpx;
    margin-left: 3%;
    line-height: 40rpx;
    font-size: 30rpx;
    color: white;
}
.offer{
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: antiquewhite;
    border-radius: 50%;
    color: white;
    background-color: rgb(41, 191, 250);
    font-size: 30rpx;
    font-weight: 600;
    position: fixed;
    right: 30rpx;
    top: 450rpx;
    box-shadow: 2rpx 2rpx 10rpx rgb(63, 63, 63);
}
.offer_input{
    width: 70%;
    height: 600rpx;
    background-color: rgb(255, 221, 110);
    position: fixed;
    left: 15%;
    top: 400rpx;
    border-radius: 20rpx;
    box-shadow: 2rpx 2rpx 10rpx rgb(63, 63, 63);
    z-index: 888;
}
.offer_title{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 40rpx;
    text-align: center;
    margin-bottom: 50rpx;
}
.offer_name{
    padding: 10rpx;

    width: 20%;
    float: left;
    margin-left: 5%;
    font-size: 30rpx;
}
.offer_name_input{
    width: 60%;
    height: 60rpx;

    float: left;
    border-bottom: 2rpx solid rgb(104, 104, 104);
}
.offer_commit{
    width: 420rpx;
    height: 60rpx;
    background-color: white;
    line-height: 60rpx;
    text-align: center;
    border-radius: 20rpx;
    margin: 20rpx auto;
    

}
.offer_close{
    width: 420rpx;
    height: 60rpx;
    background-color: rgb(255, 157, 157);
    line-height: 60rpx;
    text-align: center;
    border-radius: 20rpx;
    margin: 20rpx auto;
    color: white;
}