.title_panel{
    width: 100%;
    height: 400rpx;
    background-image: linear-gradient(to bottom right, #e66465, #fc0000);
}

.title_panel_title{

    height: 200rpx;
    line-height: 400rpx;
    font-weight: 800;
    color: aliceblue;
    font-size: 50rpx;
    margin-left: 50rpx;

}
.title_panel_title_hover{
    height: 200rpx;
    line-height: 400rpx;
    font-weight: 800;
    color: rgb(22, 55, 83);
    font-size: 50rpx;
    margin-left: 50rpx;
}
.title_panel_all{
    margin-top: 100rpx;
    height: 100rpx;
    font-weight: 500;
    color: aliceblue;
    font-size: 30rpx;
    margin-left: 50rpx;
}
.title_panel_all_piece{
    height: 50rpx;
    width: 50%;
    float: left;
}
.title_panel_all_variety{
    width: 200rpx;
    float: right;
    margin-right: 50rpx;
    height: 50rpx;
    border: 2rpx solid white;
    text-align: center;
    border-radius: 50rpx;
    line-height: 50rpx;
}

.product_menu_panel{
    width: 35%;
    margin: 30rpx 0 0 10%;

    float: left;
}
.product_menu{
    background-color: rgb(255, 255, 255);
    height: 300rpx;
    box-shadow: 2rpx 2rpx 20rpx rgb(180, 180, 180);
    text-align: center;
}
.product_menu_describe{
    margin-top: 20rpx;
    height: 100rpx;
    text-align: center;
    line-height: 50rpx;
}
.product_menu_describe_title{
    font-size: 30rpx;
    font-weight: 600;
}
.product_menu_describe_price{
    font-size: 25rpx;
    font-weight: 400;
    color: rgb(134, 134, 134);
}
.product_menu_img{
    width: 100%;
    height: 100%;
}

