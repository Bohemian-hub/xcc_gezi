</view>






<view class="form_background">
    <view class="choose_bg">
        背景：
    </view>
    <!--设置监听器，当点击radio时调用-->
    <radio-group bindchange="listenerRadioGroup">

        <view class=" choose_bg_one">

        </view>
        <view class="choose_bg_one">

        </view>
        <view class="choose_bg_one">

        </view>
