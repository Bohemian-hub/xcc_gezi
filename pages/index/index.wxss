  color: black;
  background-color: rgb(255, 255, 255);
}

.card-right-bottom {
  height: 160rpx;
  float: right;
  width: 48%;
  border-radius: 10rpx;
  box-shadow: 10rpx 10rpx 20rpx rgb(131, 131, 131);

  background-color: rgba(62, 178, 255, 0.788);
}

.card_right_data_hello{
