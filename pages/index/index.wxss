/* 区域二 */
.content_niceday {
  color: rgb(253, 253, 253);
  width: 90%;
  margin: 10rpx auto 0 auto;
  opacity: 1;
  z-index: 1;
  height: 360rpx;
  transition-property: z-index, opacity;
  transition-duration: 2s, 2s;
}

.cardleft {
  height: 360rpx;
  margin-right: 2%;
  float: left;
  width: 48%;
  overflow: hidden;
  position: relative;
  border-radius: 10rpx;
  box-shadow: 10rpx 10rpx 20rpx rgb(131, 131, 131);
  background-color: rgba(136, 19, 19, 0.534);
}
.cardleft_bg {
  height: 100%;
}
.cardleft_text {
    background-color: rgba(240, 248, 255, 0.473);
  text-indent: 2em;
  width: 90%;
  left: 0rpx;
  padding: 10px;
  bottom: 0rpx;
  font-size: 18rpx;
  position: absolute;
  color: rgb(58, 58, 58);
}
.cardleft_date{
    background-color: rgba(240, 248, 255, 0.308);
    font-weight: 600;
    width: 90%;
    left: 0rpx;
    padding: 10px;
    top: 0rpx;
    font-size: 36rpx;
    position: absolute;
    color: rgb(58, 58, 58);
}
.card-right-top {
  height: 180rpx;
  margin-bottom: 20rpx;
  float: right;
  width: 48%;
  border-radius: 10rpx;
