    <image
        src='https://xylife.oss-cn-zhangjiakou.aliyuncs.com/xcc_bg/Zoetropic%202_1.gif?Expires=1604911957&OSSAccessKeyId=TMP.3KiowN8uAYXBRgZA9CuYkKgrv2tW7wDSNpKpTdyMMmgv17hycafndQemix18fKfQ8msv5d4No5rbnd48qG3X9rkjPgGfqN&Signature=QOgKSkJSsApdy8%2BvF6hTaj8E4y4%3D&versionId=CAEQHhiBgMC54fatrRciIGRlM2NmNmVlMzQxYjRlNmM4NWNlMDVkZDFkYWQzZThl&response-content-type=application%2Foctet-stream'>
    </image>
</view>

<view class="content_toptilte">
    <text>Hi! {{userInfo.nickName}} </text>
</view>

<view class="content_niceday">
    <!-- 左侧的one区域 -->
    <view class="cardleft">
        <image class="cardleft_bg" src="{{imageone_src}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false"
            binderror="" bindload="" />
        <view class="cardleft_date">
            {{one_date}} {{one_week}}
        </view>
        <view class="cardleft_text" style="font-size:{{sentence_size}}">
            {{sentence}}
        </view>
    </view>
    <!-- 右上方的问候区域 -->
    <view class="card-right-top">
        <view class="card_right_data_hello">
            Hello,{{student_name}}何东
        </view>
        <view class="card_right_data_wenhou">
            {{greeting}}
        </view>
        <view class="card_right_data_time">
            {{now_time}}
        </view>
    </view>

    <!-- 右下角的天气预报 -->
    <view class="card-right-bottom">
        <view class="weather_panel">
            <view class="weather_panel_left">
                <image class="weather_panel_left_weather_icon" src="../../image_icon/weather/阵雨.png" mode="widthFix"
                    lazy-load="false" binderror="" bindload="" />
            </view>
            <view class="weather_panel_right">
                <view class="weather_panel_right_temperature">
                    27℃
                </view>
                <view class="weather_panel_right_condition">
                    晴，空气优
                </view>

            </view>

        </view>
        <view class="weather_location">
            <image class="weather_location_icon" src="../../image_icon/location.png" mode="widthFix" lazy-load="false"
                binderror="" bindload="" />
            <text class="weather_location_position" selectable="false" space="false" decode="false">
                西昌学院北校区
            </text>
        </view>
    </view>
</view>

<!-- 中间的菜单区域可以开始做了 -->


