
/* pages/setting/setting.wxss */
.page_back_button{
    margin-top: 40rpx;
    margin-left: 20rpx;
    padding: 30rpx;
    width: 20%;
}
.page_back{
    width: 50rpx;
    
}
.page_tile{
    width: 90%;
    font-size: 60rpx;
    font-weight: 800;
    margin: 0rpx auto 0 auto;
}
.xian_long{
    height: 10rpx;
    width: 80rpx;
    background-color: rgb(39, 101, 235);
    border-radius:5rpx;
    margin-left:40rpx;
    float: left;
}
.xian_short{
    height: 10rpx;
    width: 10rpx;
    background-color: rgb(39, 101, 235);
    border-radius:50%;
    margin-left:5rpx;
    float: left;
}
.clear_both{
    clear: both;
}
.setting_menu{
    width: 40%;
    margin: 30rpx 5% 0 5%;
    height: 300rpx;
    background-color: rgb(255, 255, 255);
    float: left;
    box-shadow: 2rpx 2rpx 20rpx rgb(180, 180, 180);
    text-align: center;
}
.setting_menu_icon{
    width: 60rpx;
    margin-top: 100rpx;
}
.copyright{
    text-align: center;
    padding-top: 150rpx;
    height: 200rpx;
    font-size: 30rpx;
    color: rgb(131, 131, 131);
}