page{
    background-color: #bebebe60;
}
.title{
    width: 100%;
    height: 140rpx;
    text-align: center;
    font-size: 40rpx;
    border-bottom: 1rpx solid rgba(206, 206, 206, 0.301);
    background-color: white;
    position: fixed;
    z-index: 999;
}
.title_back{
    width: 25%;
    background-color: rgba(255, 255, 255, 0);
    height: 80rpx;
    float: left;
    margin: 50rpx 0 10rpx 0;
    border-radius: 20rpx;
    color: #1cb4ed;
}
.title_text{
    background-color: rgba(85, 84, 83, 0);
    width: 50%;
    height: 80rpx;
    float: left;
    margin-top: 50rpx;
    line-height: 80rpx;
    color: #1cb4ed;
}

.page_back_text{
    line-height: 80rpx;
    width: 100%;
}
.forum_content{
    width: 92%;
    margin:0 auto;
    height: 280rpx;
    padding-top: 20rpx;
}
.forum_pic{
    max-height: 420rpx;
}
.forum_write{
    margin-bottom: 20rpx;
    background-color: white;
}
.topic_display{
    height: 60rpx;
    background-color: #1cb5ed00;
}
.topic_display_what{
    height: 40rpx;
    margin-top: 10rpx;
    margin-left: 30rpx;
    padding-left: 15rpx;
    padding-right: 15rpx;
    border-radius: 20rpx;
    background-color: #e9e9e9;
    line-height: 40rpx;
    width: auto;
    color: #1cb4ed;

}
.delete_topic_content{
    float: left;
}
.delete_topic_close{
    float: left;
    background-color: #d4d4d4;
    color: white;
    height: 30rpx;
    width: 30rpx;
    border-radius: 50%;
    margin-top: 5rpx;
    text-align: center;
    line-height: 30rpx;
    margin-left: 10rpx;
}
.forum_topic{
    width: 100%;
    height: 120rpx;
    background-color: white;
    border-bottom:1rpx solid rgba(182, 182, 182, 0.356);
}
.forum_topic_left{
    width: 630rpx;
    float: left;
}
.forum_topic_left_top{
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 20rpx;
    font-size: 35rpx;
    font-weight: 500;
    color: #26acdd;
}
.forum_topic_left_bottom{
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 20rpx;
    color: rgb(158, 158, 158);
}
.forum_topic_right{
    width: 120rpx;
    background-color: #1cb5ed00;
    height: 120rpx;
    float: left;
}
.forum_topic_right_jia{
    width: 50rpx;
    height: 50rpx;
    margin-top: 35rpx;
}
.placeholder{
    height: 150rpx;
}
.placeholder1{
    height: 140rpx;
}
.publish_button{
    width: 96%;
    height: 100rpx;
    background-color: #1cb4ed;
    position: fixed;
    bottom: 10rpx;
    margin-left: 2%;
    text-align: center;
    line-height: 100rpx;
    border-radius: 10rpx;
    color:white;
    font-size: 38rpx;
}
