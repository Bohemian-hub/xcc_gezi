<view class="title">
    <view class="back" bindtap="back">
        返回
    </view>
    <view class="text">
        表白
    </view>
</view>
<view class="place_hoder">

</view>

<view class="button_change" bindtap="my_confess" style="background-color:{{color == '1'?'#00cec9':'#b6b6b6'}}">我表白の人
</view>
<view class="button_change2" bindtap="confess_tome" style="background-color:{{color == '2'?'#00cec9':'#b6b6b6'}}">收到の表白
</view>

<view class="confess" wx:for="{{my_confess}}" wx:key="">
    <view class="who">Dear {{item.fields.confess_name}}</view>
    <view class="content">
        {{item.fields.confess_content}}
    </view>
    <view class="me">——by {{item.fields.name}}</view>
</view>



<view class="publish" bindtap="confessone">
    表一个白
</view>